            <RowDefinition Height="193*"/>
            <RowDefinition Height="216*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="233*"/>
            <ColumnDefinition Width="567*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txt_Resposta" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="60" Margin="4,31,-37,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="329" Background="#FFE4D7D7"/>
